<%- include("../partials/head.ejs", {
  title: "Sign Up",
  stylesheet: "account"
}) %>

<div class="container-fluid">
  <div class="row mb-5">
    <%- include("../partials/nav.ejs") %> 
  </div>

  <main class="account-form form-signup text-center"">
    <form class="mb-5" action="/signup/apply" method="POST">
      <h1 class="h3 mb-3 fw-normal">Sign Up</h1>

      <div class="form-floating">
        <input type="email" class="form-control" name="email" id="emailTx" placeholder="Email">
        <label for="emailTx">Email</label>
      </div>
      <div class="form-floating">
        <input type="text" class="form-control" name="username" id="usernameTx" placeholder="Username">
        <label for="usernameTx">Username</label>
      </div>
      <div class="form-floating mb-3">
        <input type="password" class="form-control" name="password" id="passwordTx" placeholder="Password">
        <label for="passwordTx">Password</label>
      </div>

      <button class="w-100 btn btn-lg btn-primary" type="submit">Sign Up</button>
    </form>
    
    
    <div class="mb-3 text-muted">
      Alreaty signed up? <br>
      <a href="/account/login">Log In</a> instead
    </div>
    
  </main>
</div>

<%- include("../partials/foot.ejs") %>