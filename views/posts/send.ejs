<%- include("../partials/head.ejs", {title: "Send a Post"}) %>

<main>
  <h1>Send a Post</h1>
  <%- include("../partials/nav.ejs") %>


  <p>Write your message below.</p>

  <div class="send-form">
    <form action="/send" method="POST">
      <div class="form-group">
        <label for="authorTx">Name:</label>
        <input type="text" name="author" id="authorTx">
      </div>
      <div class="form-group">
        <label for="messageTx">Message:</label>
        <textarea name="message" id="messageTx" rows="10"></textarea>
      </div>
      <div class="form-group submit">
        <button type="submit" id="submitBt">Send</button>
      </div>
    </form>
  </div>
</main>

<%- include("../partials/foot.ejs") %>