<%- include("../partials/head.ejs", {
  title: "Send a Post",
  stylesheet: "post"
}) %>

<main>
  <h1>Send a Post</h1>
  <%- include("../partials/nav.ejs") %>
  
  <div class="send-form">
    <p>Write your message below.</p>
    
    <form action="/posts/send" method="POST">
      <div class="form-group">
        <label for="authorTx">Name:</label>
        <input type="text" name="author" id="authorTx">
      </div>
      <div class="form-group">
        <label for="messageTx">Message:</label>
        <textarea name="message" id="messageTx"></textarea>
      </div>
      <div class="form-group submit">
        <button type="submit" id="submitBt">Send</button>
      </div>
    </form>
  </div>
</main>

<%- include("../partials/foot.ejs") %>